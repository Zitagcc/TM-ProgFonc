(require (lib "turtles.ss" "graphics"))

(define (gauche lenAr)
  (turn 120)
  (draw (/ lenAr 2)))

(define (droite lenAr)
  (turn 60)
  (draw (/ lenAr 2)))

(define (brocoli nGen lenAr)
  (if (= nGen 1) (begin
                (draw lenAr) ; branche
                
                (gauche lenAr)
                (droite lenAr)
                )))

(turtles #t)

(brocoli 1 100)